<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/first_outline_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/second_outline_rl"
            android:layout_alignLeft="@+id/second_outline_rl"
            android:layout_alignTop="@+id/second_outline_rl"
            android:layout_alignEnd="@+id/second_outline_rl"
            android:layout_alignRight="@+id/second_outline_rl"
            android:layout_alignBottom="@+id/second_outline_rl">

            <android.support.v7.widget.CardView
                android:id="@+id/null_outline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                app:cardBackgroundColor="#103F51B5"

                app:cardCornerRadius="35dp"
                app:cardElevation="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/outline_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/first_outline_rl"
            android:layout_alignLeft="@+id/first_outline_rl"
            android:layout_alignTop="@+id/first_outline_rl"
            android:layout_alignEnd="@+id/first_outline_rl"
            android:layout_alignRight="@+id/first_outline_rl"
            android:layout_alignBottom="@+id/first_outline_rl">

            <android.support.v7.widget.CardView
                android:id="@+id/first_outline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="#303F51B5"

                app:cardCornerRadius="30dp"
                app:cardElevation="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_outline_rl"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignBottom="@+id/button">

            <android.support.v7.widget.CardView
                android:id="@+id/second_outline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"


                android:visibility="gone"
                app:cardBackgroundColor="#503F51B5"

                app:cardCornerRadius="25dp"
                app:cardElevation="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/button_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:minWidth="100dp"
                android:minHeight="40dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:minHeight="40dp"
                    android:textColor="#fff" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>